@{
    ViewBag.Title = "step1";
    Layout = "~/Views/Shared/_autoreload.cshtml";
    string patCARD = Session["CARD"].ToString();
    string patName = Session["NAME"].ToString();
}

<style type="text/css">
    .container {
        /*text-align:cente*/
    }

    .main {
        height: 300px;
    }
</style>

<script>
    function measure() {
        //$("#measFrame").css("display", "inline");
        //$("#measTable").css("display", "none");
        //$("#startMeasure").css("display", "inline");
        location.href = "step1_start"
    }

    $(function () {
        $('#measFrame').load(function () {
            var $iframe = $(this),
                $contents = $iframe.contents();

            // 取得 iframe 中的元素
            //$('#ccc').click(function () {
            //    alert($contents.find('#measFinish').val());
            //});

            setInterval(function () {
                var finish = $contents.find('#measFinish').val();
                if (finish == 'True') {
                    $("#btnNextStep").css("display", "inline");
                }
            }, 1000);

        });
    });

</script>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="stepper" data-role="stepper" data-steps="3" data-start="1">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <p style="text-align:left;font-size:26px">健康量測</p>
        </div>
        <div class="col-md-4">
            <p style="text-align:center;font-size:26px">配對或指定醫生</p>
        </div>
        <div class="col-md-4">
            <p style="text-align:right;font-size:26px">完成</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr>
            <div class="main" style="font-size:36px;">
                @patName &nbsp @patCARD 您好，按鈕後開始量測:
                <hr>
                <iframe src="step1_request" width="900" height="300" frameborder="0" scrolling="no" id="measFrame" style="display:none"></iframe>


                <div style="text-align:center">
                    <button class="button success button rounded" onclick=measure() id="startMeasure" style="width:300px;height:100px;font-size:25px">
                        開始量測
                    </button>
                    <button class="button info button rounded" onclick="linkTo()" id="btnNextStep" style="width:300px;height:50px;font-size:25px;display:none">
                        下一步
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>



